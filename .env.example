# Frontend Environment Variables
# Copy this file to .env.local for local development

# API URL for the frontend to connect to the backend
# In production, this should be your Vercel domain
# In development, this should point to your local backend
VITE_API_URL=http://localhost:3001

# Optional: Analytics and tracking
# VITE_ANALYTICS_ID=your_analytics_id

# Optional: Feature flags
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_COMMENTS=false

# Backend Environment Variables (for local development)
# These are not needed for Vercel deployment as functions are stateless

# Port for local development
PORT=3001

# Optional: Database connection (for production with persistent storage)
# DATABASE_URL=your_database_connection_string
# REDIS_URL=your_redis_connection_string

# Optional: Email service configuration
# EMAIL_SERVICE_API_KEY=your_email_service_key
# EMAIL_FROM=noreply@yourdomain.com

# Optional: Security settings
# JWT_SECRET=your_jwt_secret
# CORS_ORIGIN=https://yourdomain.com
